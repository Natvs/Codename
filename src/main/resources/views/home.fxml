<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>


<GridPane fx:id="homeView" stylesheets="@../style/home.css" xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="eu.telecomnancy.codingweek.codenames.controller.HomeController">
    <rowConstraints>
        <RowConstraints percentHeight="15" />
        <RowConstraints percentHeight="45" />
        <RowConstraints percentHeight="11" />
        <RowConstraints percentHeight="11" />
        <RowConstraints percentHeight="11" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="7" /> 
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <children>
        <Label fx:id="Title" text="Codenames" GridPane.columnIndex="0"
            GridPane.halignment="CENTER" GridPane.rowIndex="0" />
        
        <ImageView fitHeight="230.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true"
             GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <image>
                <Image url="@../images/logo.jpg" />
            </image>
        </ImageView>

        <Button fx:id="newGameButton" onAction="#onNewGame" text="Nouvelle partie"
            GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        
        <Button fx:id="loadGameButton" onAction="#onLoadGame" text="Charger une partie"
            GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

        <Button fx:id="quitButton" onAction="#onQuit" text="Quitter" GridPane.columnIndex="0"
            GridPane.halignment="CENTER" GridPane.rowIndex="4" />

        <Label fx:id="Subtitle" text="by AnthropicPotato - APt" GridPane.halignment="CENTER"
            GridPane.rowIndex="5" />
    </children>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="6" alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
        <children>
            <Label text="Version 1.0" />
        </children>
    </HBox>

</GridPane>
