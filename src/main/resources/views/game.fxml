<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="mainPane" stylesheets="@../style/game.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.codingweek.codenames.controller.GameController">
    <rowConstraints>
        <RowConstraints percentHeight="5" />
        <RowConstraints percentHeight="90.0" />
      <RowConstraints percentHeight="5.0" />
    </rowConstraints>
    
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <children>
        <Label fx:id="currentTeam" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <GridPane fx:id="gameGrid" prefHeight="30.0" prefWidth="86.0" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <Button fx:id="quitButton" mnemonicParsing="false" text="Quitter le jeu" GridPane.rowIndex="2" onAction="#onQuit"/>
    </children>
</GridPane>
