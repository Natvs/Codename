<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="mainPane" stylesheets="@../style/newConfig.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.codingweek.codenames.controller.NewConfigController">

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <children>
        <Label text="Nombre de joueurs : " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
        <Spinner fx:id="nbPlayers" amountToStepBy="1" initialValue="4" max="8" min="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

        <Label text="Taille de la grille : " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <HBox GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <Spinner fx:id="nbRows" amountToStepBy="1" initialValue="5" max="10" min="2" />
            <Label text="x" />
            <Spinner fx:id="nbCols" amountToStepBy="1" initialValue="5" max="10" min="2" />
        </HBox>

        <Label text="ThÃ©matique : " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
        <ComboBox fx:id="thematicSelection" onAction="#onThematicSelection" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

        <Button fx:id="startButton" onAction="#onStart" text="C'est parti !" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

        <Button onAction="#onBack" text="Retour" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="4" />
    </children>

</GridPane>
